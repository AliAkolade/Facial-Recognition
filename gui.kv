<XLayout>:
    anchor_x: 'center'
    anchor_y: 'center'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5, 0.5
        spacing: 10

        Label:
            text: 'Welcome'

        Button:
            text: 'Add Faces(Train Model)'
            on_press: root.train()

        Button:
            text: 'Start Live Feed Searcher'
            on_press: root.test()