WindowManager:
    MainWindow:
    TrainWindow:

<MainWindow>:
    name: "Home Screen"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 0.5
            spacing: 10

            Label:
                text: 'Welcome'

            Button:
                id: switch
                text: 'Add Faces(Train Model)'
                on_press:
                    root.train()

            Button:
                text: 'Start Live Feed Searcher'
                on_press: root.test()

<TrainWindow>:
    name: "Training Screen"
    id: a
    AnchorLayout:
        id: b
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            id: c
            orientation: 'vertical'
            size_hint: 0.9, 0.9
            spacing: 10

            Label:
                text: 'Training Data'
                size_hint: 1, 0.1

            ScrollView:

                Label:
                    id: text_label
                    text: root.console_output
                    size_hint: None, None
                    size: self.texture_size