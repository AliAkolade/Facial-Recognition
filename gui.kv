WindowManager:
    MainWindow:
    TrainWindow:

<MainWindow>:
    name: "Home Screen"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 0.5
            spacing: 10

            Label:
                text: 'Welcome'

            Button:
                text: 'Add Faces(Train Model)'
                on_release: root.train()

            Button:
                text: 'Start Live Feed Searcher'
                on_release: root.test()

<TrainWindow>:
    name: "Training Screen"

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.9
            spacing: 10

            Label:
                text: 'Training Faces from Data'
                size_hint: 1, 0.1

            ScrollView:

                Label:
                    text: root.console_output
                    size_hint: None, None
                    size: self.texture_size

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint_y: 0.1

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.3

                    Button:
                        text: "Exit"
                        on_release:
                            app.root.current = "Home Screen"
                            root.manager.transition.direction = "right"